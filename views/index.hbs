                <input type="password" name="password" placeholder="Enter password" required="">
            </div>
            <div class="clearfix">
                <a href="/Cancel"><button type="button" class="cancelbtn">Cancel</button></a>
                <button type="submit" class="signupbtn">Sign Up</button>
            </div>
        </form>
        </div>
    </div>
